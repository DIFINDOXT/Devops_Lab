#!/bin/bash
echo "ðŸ“ Post-commit hook triggered"

# Get commit info
commit_hash=$(git rev-parse HEAD)
commit_message=$(git log -1 --pretty=%B)
author=$(git log -1 --pretty=%an)
files_changed=$(git diff-tree --no-commit-id --name-only -r HEAD)

echo "ðŸš€ Commit $commit_hash by $author completed"
echo "ðŸ“ Message: $commit_message"
echo "ðŸ“ Files changed: $files_changed"

# Save to logs
mkdir -p logs
echo "$(date): $commit_hash - $commit_message" >> logs/commit.log

# Simulate notification (e.g., to Slack or Teams)
echo "ðŸ“§ Notification sent to team about new commit"
